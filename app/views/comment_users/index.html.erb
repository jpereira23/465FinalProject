<p id="notice"><%= notice %></p>

<h1>Listing Comment Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment_users.each do |comment_user| %>
      <tr>
        <td><%= comment_user.user_id %></td>
        <td><%= comment_user.comment_id %></td>
        <td><%= link_to 'Show', comment_user %></td>
        <td><%= link_to 'Edit', edit_comment_user_path(comment_user) %></td>
        <td><%= link_to 'Destroy', comment_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

