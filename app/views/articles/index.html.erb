<div class="intro"> 
  <br><br><br><br>
    <div class="col-md-8"> 
    <% @articles.each do |article| %>
       <div class="well well-lg"> 
       <p><h1><%= article.title %></h1></p> 
       <p><%= article.description %></p>
	<p style="-webkit-touch-callout: none; -webkit-user-select: none; -khtml-user-select: none; -moz-user-select: none; -ms-user-select: none; user-select: none;"><%= link_to image_tag(root_url + "/images/" + article.filename), article %></p>
        <p>  <span class="glyphicon glyphicon-eye-open"></span> <%= article.views %> <br>        
        <span class="glyphicon glyphicon-thumbs-up"></span> <%= article.likes %></p>
       <% if current_user.email == "jpereira1@mail.csuchico.edu" %> 
       <p> <%= link_to 'Delete Article', article, method: :delete, data: { confirm: 'Are you sure?' } %></p>
       <% end %>
       </div>
    <% end %> 
     <% if current_user.email == "jpereira1@mail.csuchico.edu" %>
       <%= link_to 'New Article', new_article_path %>
     <% end %>
    </div> 
    <div id="4cm">
    <div class="col-md-4"> 
      <div class="well well-lg"> 
      <h1>Top Liked Tags</h1> 
       <%= render 'tag_devises/index' %>
      </div>
    </div> 
  </div>
</div>
<br>

